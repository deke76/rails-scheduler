<div class="d-flex flex-column justify-content-center py-5 px-sm-3 px-lg-4">
  <div class="mx-auto w-100 max-w-lg">
    <h2 class="mt-3 text-center fs-1 fw-bold text-dark">
      Sign up for Hotwired ATS
    </h2>
    <p class="mt-2 text-center fs-6 text-muted mw-100">
      Already have an account?
      <%= link_to "Sign in instead", new_user_session_path, class: "fst-italic" %>
    </p>
  </div>

  <div class="mt-4 mx-auto w-75">
    <div class="bg-white py-4 px-4 shadow rounded">
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= form.email_field :email, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= form.password_field :password, 
            autocomplete: "new-password",
            help: "must be at least #{@minimum_password_length} characters",
            help_class: "fst-italic"
          %>
        </div>

        <div class="form-group">
          <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div>
          <%= form.button "Sign up", class: "btn btn-primary w-100", data: { disable_with: "Signing up" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>